@using RunGroupWebApp.Data.Enum
@model Club

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete this Club ?</h3>
<div>
    <h4>Club</h4>
    <hr />
   <form method="post" asp-action="Delete" enctype="multipart/form-data">
       <input type="hidden" value="AdressId" id="AdressId"/>
        <div class="container">
            
            <div class="row">

                <div class="col-md-8">
                    <img class="img-fluid" src="@Model.Image" />
                </div>
                <div class="col-md-4">
                    <h3 class="my-3">@Model.Title</h3>
                    <p>@Model.Description</p>
                    <h3>Location</h3>
                    <ul>
                        <li>@Model.Address.street</li>
                        <li>@Model.Address.city</li>
                        <li>@Model.Address.state</li>
                        <li>@Model.ClubCategory</li>
                    </ul>
                </div>

            </div>

        </div>


   </form> 
    <form asp-action="DeleteClub">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" /> 
    </form>
</div>
