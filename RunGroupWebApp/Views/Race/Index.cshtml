@model IEnumerable<Race>
@{
}
@if (User.Identity.IsAuthenticated)
{
    
<a type="button" asp-controller="Race" asp-action="Create"
   class="btn btn-sm btn-outline-secondary">Create New Race</a>
}
<div class="album py-5 bg-light">

    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class=" col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" />
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" asp-controller="Race" asp-action="Detail" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {

                                        <a type="button" asp-controller="Race" asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a type="button" asp-controller="Race" asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }

                                </div>
                                <small class="text-muted">@item.RaceCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>