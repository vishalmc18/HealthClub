@using RunGroupWebApp.Data.Enum
@model Race 

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete this Race?</h3>
<div>
    <hr />
   <form method="post" asp-action="Delete" enctype="multipart/form-data">
        <input type="hidden" value="AddressId" id="AddressId" />
        <div class="container">
            
            <div class="row">

                <div class="col-md-8">
                    <img class="img-fluid" src="@Model.Image" />
                </div>
                <div class="col-md-4">
                    <h3 class="my-3">@Model.Title</h3>
                    <p>@Model.Description</p>
                    <h3>Location</h3>
                    <ul>
                        <li>@Model.Address.street</li>
                        <li>@Model.Address.city</li>
                        <li>@Model.Address.state</li>
                        @*<li>@Model.RaceCategory</li>*@
                    </ul>
                </div>

            </div>

        </div>

   </form> 
   <br />
    <form asp-action="DeleteRace">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" /> 
    </form>
</div>